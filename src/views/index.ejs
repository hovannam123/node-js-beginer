<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>NodeJs</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }
    </style>
</head>

<body>

    <div class="topnav">
        <a class="active" href="">Home</a>
        <a href="">News</a>
        <a href="">Contact</a>
        <a href="">About</a>
    </div>
    <div style="padding-left:16px">
        <h2>List user</h2>
        <div class="w3-container">
            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                        <th>ADD</th>
                    </tr>
                </thead>
                <% for(let i=0; i < dataUser.length; i++) { %>
                    <tr>
                        <td>
                            <%= dataUser[i].id%>
                        </td>
                        <td>
                            <%= dataUser[i].firstName%>
                        </td>
                        <td>
                            <%= dataUser[i].lastName%>
                        </td>
                        <td>
                            <a href="/detail/user/<%= dataUser[i].id%>"> Details</a>
                            <form action="/user/edit/<%= dataUser[i].id%>" method="GET">
                                <button type="submit">EDIT</button>
                            </form>
                            <a href="/user/delete/<%= dataUser[i].id%>"> Delete</a>
                        </td>
                        <td>
                            <a href="/new-user-form">ADD</a>
                        </td>
                    </tr>
                    <% } %>
            </table>
        </div>
    </div>



</body>

</html>